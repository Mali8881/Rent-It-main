<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181C24">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_close"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Новое объявление"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Images horizontal preview (до 9) -->
        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Город или адрес"
            android:background="@drawable/edit_text_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#7B849B"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_photos"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:paddingEnd="4dp" />
        <ImageView
            android:id="@+id/image_added"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_placeholder" />


        <Button
            android:id="@+id/btn_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:text="Добавить фото"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4A90E2"
            android:background="@drawable/rounded_button"/>

        <!-- Main fields -->
        <EditText
            android:id="@+id/title"
            android:hint="Название"
            android:textColorHint="#7B849B"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/description"
            android:hint="Описание"
            android:textColorHint="#7B849B"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="12dp"
            android:minLines="3"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Цена и площадь -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/price"
                android:hint="Цена, сом"
                android:inputType="number"
                android:textColorHint="#7B849B"
                android:textColor="#FFFFFF"
                android:background="@drawable/edit_text_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/area"
                android:hint="Площадь, м²"
                android:inputType="numberDecimal"
                android:textColorHint="#7B849B"
                android:textColor="#FFFFFF"
                android:background="@drawable/edit_text_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Комнаты и ванные -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/bedrooms"
                android:hint="Спальни"
                android:inputType="number"
                android:textColorHint="#7B849B"
                android:textColor="#FFFFFF"
                android:background="@drawable/edit_text_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/bathrooms"
                android:hint="Ванные"
                android:inputType="number"
                android:textColorHint="#7B849B"
                android:textColor="#FFFFFF"
                android:background="@drawable/edit_text_bg"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Тип жилья, здание, отопление, wifi -->
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinner_building_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinner_heating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/spinner_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <!-- Удобства -->
        <EditText
            android:id="@+id/amenities"
            android:hint="Удобства (Wi-Fi, Парковка...)"
            android:textColorHint="#7B849B"
            android:textColor="#FFFFFF"
            android:background="@drawable/edit_text_bg"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Кнопка -->
        <TextView
            android:id="@+id/post"
            android:text="Опубликовать"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4A90E2"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
