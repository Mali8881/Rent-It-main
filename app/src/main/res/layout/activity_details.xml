<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#121212"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bg_dark"
        android:padding="16dp">

        <!-- Изображение -->
        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:layout_marginBottom="16dp" />

        <!-- Название и цена -->
        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Уютная квартира в центре"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/details_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="₽ 1 500 в месяц"
            android:textColor="#4A90E2"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- Локация и автор -->
        <TextView
            android:id="@+id/details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 Бишкек"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/details_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 user@gmail.com"
            android:textColor="#777777"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Описание -->
        <TextView
            android:text="Описание"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Современная светлая квартира, полностью меблирована. Идеально подходит для пар или студентов."
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Удобства -->
        <TextView
            android:text="Удобства"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_amenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📶 Wi-Fi, 📺 TV, 🚗 Парковка"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Характеристики -->
        <TextView
            android:text="Характеристики"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_bedrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛏 Спальни: 2"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/details_bathrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛁 Ванные: 1"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/details_area" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📐 Площадь: 45 м²"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/details_type" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏠 Тип: Квартира"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/details_rating" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⭐ Рейтинг: 4.5 / 5"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Кнопка бронирования -->
        <Button
            android:id="@+id/details_btn_book"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Забронировать"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_button_blue"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
