<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#12122B"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Изображение -->
        <ImageView
            android:id="@+id/details_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:background="#2A2A2A"
            android:layout_marginBottom="12dp" />

        <!-- Название -->
        <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название жилья"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <!-- Цена -->
        <TextView
            android:id="@+id/details_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена: $1500"
            android:textColor="#A3D3FF"
            android:textSize="18sp"
            android:layout_marginTop="4dp" />

        <!-- Локация -->
        <TextView
            android:id="@+id/details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Локация: Бишкек"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Автор -->
        <TextView
            android:id="@+id/details_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Автор: user@gmail.com"
            android:textColor="#777777"
            android:textSize="13sp"
            android:layout_marginTop="4dp" />

        <!-- Блок: описание -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание жилья..."
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Блок: удобства -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удобства"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_amenities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi, TV, Parking"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Блок: характеристики -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Характеристики"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/details_bedrooms"
            android:text="Спальни: 2"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/details_bathrooms"
            android:text="Ванные комнаты: 1"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/details_area"
            android:text="Площадь: 45 м²"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/details_type"
            android:text="Тип: Квартира"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/details_rating"
            android:text="Рейтинг: 4.5 ★"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <!-- Кнопка -->
        <Button
            android:id="@+id/details_btn_book"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Забронировать"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/book_button_bg"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
