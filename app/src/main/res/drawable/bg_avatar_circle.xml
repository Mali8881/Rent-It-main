<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A1C2A"/>
            <size android:width="104dp" android:height="104dp"/>
            <corners android:radius="52dp"/>
        </shape>
    </item>
    <!-- Белый круг -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#23284A"/>
        </shape>
    </item>
</layer-list>
